<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fitnesspal.CreateProfileController">
    <children>
        <Label fx:id="label_profile" layoutX="202.0" layoutY="25.0" text="Create Your Profile">
            <font>
                <Font name="Arial Rounded MT Bold" size="21.0" />
            </font>
        </Label>
        <Label layoutX="20.0" layoutY="120.0" text="Full Name:" />
        <TextField fx:id="tfFullName" layoutX="133.0" layoutY="116.0" />
        <Label layoutX="20.0" layoutY="160.0" text="Gender:" />
        <ChoiceBox fx:id="cbGender" layoutX="120.0" layoutY="156.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Male" />
                    <String fx:value="Female" />
                    <String fx:value="Other" />
                </FXCollections>
            </items>
        </ChoiceBox>
        <Label layoutX="20.0" layoutY="200.0" text="Birthdate:" />
        <DatePicker fx:id="dpBirthdate" layoutX="133.0" layoutY="196.0" />
        <Label layoutX="20.0" layoutY="240.0" text="Height (cm):" />
        <TextField fx:id="tfHeight" layoutX="133.0" layoutY="236.0" />
        <Label layoutX="20.0" layoutY="280.0" text="Weight (kg):" />
        <TextField fx:id="tfWeight" layoutX="133.0" layoutY="276.0" />
        <Button fx:id="btnSaveProfile" layoutX="250.0" layoutY="320.0" mnemonicParsing="false" text="Save Profile" />
        <Button fx:id="backButton" layoutX="106.0" layoutY="320.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="71.0" text="Back" />
      <TextField fx:id="tfUser" layoutX="133.0" layoutY="76.0" />
      <Label layoutX="17.0" layoutY="80.0" text="Re-enter Username" />
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="365.0" layoutY="121.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Logo-fit.png" />
         </image>
      </ImageView>
    </children>
</AnchorPane>
